syntax = "v1"

info (
	title:   "用户服务"
	desc:    "用户服务"
	author:  "zouxiaodong"
	email:   "13575232531@163.com"
	version: "v1"
)

import (
	"service/basefunction.api"
	"service/userinfo.api"
	"service/orginfo.api"
)

// 登录注册相关接口
@server (
	prefix: login
	group:  login
)
service user {
	@doc "获取微信登录二维码"
	@handler getLoginQrCode
	post /getLoginQrCode (BaseReq) returns (LoginQrCodeResp)

	@doc "获取微信扫码登录状态"
	@handler getQrCodeLoginStatus
	post /getQrCodeLoginStatus (QrCodeLoginStatusReq) returns (QrCodeLoginStatusResp)

	@doc "获取图像验证码"
	@handler getCaptcha
	post /getCaptcha (BaseReq) returns (CaptchaResp)

	@doc "获取手机短信验证码"
	@handler getVerificationCode
	post /getVerificationCode (VerificationCodeReq) returns (BaseResp)

	@doc "注册"
	@handler register
	post /register (RegisterReq) returns (RegisterResp)

	@doc "登录"
	@handler login
	post /login (LoginReq) returns (LoginResp)
}

// 用户相关接口
@server (
	prefix: user
	group:  user
	jwt:    Auth
)
service user {
	@doc "文件上传"
	@handler fileUpload
	post /fileUpload returns (FileUploadResp)

	@doc "文件下载"
	@handler fileDownload
	get /fileDownload/:path/:objectKey (FileDownloadReq)

	@doc "获取当前登录用户数据"
	@handler getCurrentUserData
	post /getCurrentUserData (BaseReq) returns (CurrentUserDataResp)

	@doc "绑定手机号码"
	@handler bindPhone
	post /bindPhone (BindPhoneReq) returns (BindPhoneResp)

	@doc "获取用户组织列表"
	@handler getOrgList
	post /getOrgList (BaseReq) returns (OrgListResp)

	@doc "切换组织"
	@handler changeOrg
	post /changeOrg (ChangeOrgReq) returns (BaseResp)

	@doc "更新组织名称"
	@handler updateOrgName
	post /updateOrgName (UpdateOrgNameReq) returns (BaseResp)

	@doc "更新头像"
	@handler updateHeadImg
	post /updateHeadImg (UpdateHeadImgReq) returns (BaseResp)

	@doc "更新昵称"
	@handler updateNickName
	post /updateNickName (UpdateNickNameReq) returns (BaseResp)

	@doc "获取消息列表"
	@handler getMessageList
	post /getMessageList (MessageListReq) returns (MessageListResp)

	@doc "忽略消息"
	@handler ignoreMessage
	post /ignoreMessage (IgnoreMessageReq) returns (BaseResp)

	@doc "退出登录"
	@handler logOut
	post /logOut (LogOutReq) returns (LogOutResp)
}

// 组织团队相关接口
@server (
	prefix: org
	group:  org
	jwt:    Auth
)
service user {
	@doc "查找团队"
	@handler searchOrg
	post /searchOrg (SearchOrgReq) returns (SearchOrgResp)

	@doc "查找用户"
	@handler searchUser
	post /searchUser (SearchUserReq) returns (SearchUserResp)

	@doc "用户申请加入团队"
	@handler applyJoinOrg
	post /applyJoinOrg (ApplyJoinOrgReq) returns (ApplyJoinOrgResp)

	@doc "邀请用户加入团队"
	@handler inviteJoinOrg
	post /inviteJoinOrg (InviteJoinOrgReq) returns (InviteJoinOrgResp)

	@doc "同意用户申请加入团队"
	@handler agreeApplyJoinOrg
	post /agreeApplyJoinOrg (AgreeApplyJoinOrgReq) returns (AgreeApplyJoinOrgResp)

	@doc "用户同意邀请加入团队"
	@handler agreeInviteJoinOrg
	post /agreeInviteJoinOrg (AgreeInviteJoinOrgReq) returns (AgreeInviteJoinOrgResp)

	@doc "获取团队角色列表"
	@handler getOrgRoleList
	post /getOrgRoleList (OrgRoleListReq) returns (OrgRoleListResp)

	@doc "获取团队权限树"
	@handler getOrgPermTree
	post /getOrgPermTree (OrgPermTreeReq) returns (OrgPermTreeResp)

	@doc "创建角色"
	@handler createRole
	post /createRole (CreateRoleReq) returns (CreateRoleResp)

	@doc "更新角色"
	@handler updateRole
	post /updateRole (UpdateRoleReq) returns (UpdateRoleResp)

	@doc "获取团队用户列表"
	@handler getOrgUserList
	post /getOrgUserList (OrgUserListReq) returns (OrgUserListResp)

	@doc "获取团队用户分页列表"
	@handler getOrgUserPageList
	post /getOrgUserPageList (OrgUserPageListReq) returns (OrgUserPageListResp)

	@doc "修改用户角色"
	@handler changeUserRole
	post /changeUserRole (ChangeUserRoleReq) returns (ChangeUserRoleResp)

	@doc "删除用户"
	@handler deleteUser
	post /deleteUser (DeleteUserReq) returns (DeleteUserResp)

	@doc "暂停用户"
	@handler pauseUser
	post /pauseUser (PauseUserReq) returns (PauseUserResp)

	@doc "恢复用户"
	@handler resumeUser
	post /resumeUser (ResumeUserReq) returns (ResumeUserResp)

	@doc "分配算力"
	@handler giverPower
	post /giverPower (GivePowerReq) returns (GivePowerResp)

	@doc "平均分配算力"
	@handler giverPowerAvg
	post /giverPowerAvg (GivePowerAvgReq) returns (GivePowerAvgResp)

	@doc "分配店铺算力"
	@handler giverPowerShop
	post /giverPowerShop (GivePowerShopReq) returns (GivePowerShopResp)

	@doc "平均分配店铺算力"
	@handler giverPowerShopAvg
	post /giverPowerShopAvg (GivePowerShopAvgReq) returns (GivePowerShopAvgResp)

	@doc "获取团队店铺分页列表"
	@handler getOrgShopPageList
	post /getOrgShopPageList (OrgShopPageListReq) returns (OrgShopPageListResp)

	@doc "编辑店铺指派"
	@handler updateShopAssign
	post /updateShopAssign (UpdateShopAssignReq) returns (UpdateShopAssignResp)

	@doc "获取团队用户操作记录分页列表"
	@handler getOrgUserOperationPageList
	post /getOrgUserOperationPageList (OrgUserOperationPageListReq) returns (OrgUserOperationPageListResp)

	@doc "导出团队用户操作记录列表"
	@handler getOrgUserOperationList
	post /getOrgUserOperationList (OrgUserOperationListReq)
}

@server (
	prefix: wechat
	group:  login
)
service user {
	@doc "微信回调绑定接口"
	@handler wechatCallBackGet
	get /wechatCallBack (WechatCallBackGetReq) returns (string)

	@doc "微信回调"
	@handler wechatCallBackPost
	post /wechatCallBack (WechatCallBackPostReq) returns (BaseResp)
}

