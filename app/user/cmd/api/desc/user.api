syntax = "v1"

info (
	title:   "用户服务"
	desc:    "用户服务"
	author:  "zouxiaodong"
	email:   "13575232531@163.com"
	version: "v1"
)

import (
	"service/userinfo.api"
	"service/basefunction.api"
)

// 登录注册相关接口
@server (
	prefix: login
	group:  login
)
service user {
	@doc "获取微信登录二维码"
	@handler getLoginQrCode
	get /getLoginQrCode (BaseReq) returns (LoginQrCodeResp)

	@doc "获取微信扫码登录状态"
	@handler getQrCodeLoginStatus
	get /getQrCodeLoginStatus (QrCodeLoginStatusReq) returns (QrCodeLoginStatusResp)

	@doc "获取图像验证码"
	@handler getCaptcha
	get /getCaptcha (BaseReq) returns (CaptchaResp)

	@doc "获取手机短信验证码"
	@handler getVerificationCode
	post /getVerificationCode (VerificationCodeReq) returns (BaseResp)

	@doc "注册"
	@handler register
	post /register (RegisterReq) returns (RegisterResp)

	@doc "登录"
	@handler login
	post /login (LoginReq) returns (LoginResp)
}

@server (
	prefix: wechat
	group:  user
	jwt:    Auth
)
service user {
	@doc "获取当前登录用户数据"
	@handler getCurrentUserData
	post /getCurrentUserData (BaseReq) returns (CurrentUserDataResp)

	@doc "绑定手机号码"
	@handler bindPhone
	post /bindPhone (BindPhoneReq) returns (BaseResp)
}

@server (
	prefix: wechat
	group:  login
)
service user {
	@doc "微信回调"
	@handler wechatCallBackGet
	get /wechatCallBack (WechatCallBackGetReq) returns (string)

	@doc "微信回调"
	@handler wechatCallBackPost
	post /wechatCallBack (WechatCallBackPostReq) returns (BaseResp)
}

