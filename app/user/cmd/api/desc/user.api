import (
	"service/userinfo.api"
	"service/basefunction.api"
)

// 登录注册相关接口
@server (
	prefix: login
	group:  login
)
service user {
	@doc "获取图像验证码"
	@handler getCaptcha
	get /getCaptcha (BaseReq) returns (CaptchaResp)

	@doc "获取手机短信验证码"
	@handler getVerificationCode
	post /getVerificationCode (VerificationCodeReq) returns (BaseResp)
}

