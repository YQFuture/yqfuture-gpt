syntax = "v1"

info (
	title:   "训练服务"
	desc:    "训练服务"
	author:  "zouxiaodong"
	email:   "13575232531@163.com"
	version: "v1"
)

import (
	"shopTraining/shopTraining.api"
	"basicFunction/basicFunction.api"
)

@server (
	prefix: JWT
	group:  JWT
)
service training {
	@handler getJWT
	get /getJWT (ShopTrainingReq) returns (ShopTrainingResp)
}

@server (
	prefix: basicFunction
	group:  basicFunction
	jwt:    Auth
)
service training {
	@handler getDictInfoByType
	post /getDictInfoByType (DictInfoByTypeReq) returns (DictInfoByTypeResp)
}

@server (
	prefix: shopTraining
	group:  shopTraining
	jwt:    Auth
)
service training {
	@doc "预训练"
	@handler preSetting
	post /preSetting (ShopTrainingReq) returns (ShopTrainingResp)

	@doc "取消预训练"
	@handler cancelPreSetting
	post /cancelPreSetting (CancelPreSettingReq) returns (BaseResp)

	@doc "判断店铺是否初次登录(从未进行过训练)"
	@handler JudgeFirstShop
	post /JudgeFirstShop (JudgeFirstShopReq) returns (JudgeFirstShopResp)

	@doc "查询店铺列表"
	@handler getShopPageList
	post /getShopPageList (ShopPageListReq) returns (ShopPageListResp)

	@doc "训练店铺"
	@handler trainingShop
	post /trainingShop (TrainingShopReq) returns (BaseResp)

	@doc "获取店铺训练进度"
	@handler getShopTrainingProgress
	post /getShopTrainingProgress (GetShopTrainingProgressReq) returns (GetShopTrainingProgressResp)

	@doc "查询商品列表"
	@handler getGoodsPageList
	post /getGoodsPageList (GoodsPageListReq) returns (BaseResp)

	@doc "获取商品训练结果"
	@handler getGoodsTrainingResult
	post /getGoodsTrainingResult (GetGoodsTrainingResultReq) returns (GetGoodsTrainingResultResp)

	@doc "训练商品"
	@handler trainingGoods
	post /trainingGoods (TrainingGoodsReq) returns (TrainingGoodsResp)

	@doc "添加商品"
	@handler addGoods
	post /addGoods (AddGoodsReq) returns (BaseResp)

	@doc "启用商品"
	@handler enableGoods
	post /enableGoods (BaseGoodsReq) returns (BaseResp)

	@doc "停用商品"
	@handler unEnableGoods
	post /unEnableGoods (BaseGoodsReq) returns (BaseResp)
}

